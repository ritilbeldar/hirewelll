<%- include('partials/nav.ejs') %>
   <div class="layout-content">
      <div class="container-fluid flex-grow-1 container-p-y">
         <h4 class="font-weight-bold py-3 mb-0">Edit School</h4>
         <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
            <ol class="breadcrumb">
               <li class="breadcrumb-item"><a href="/admin/dashboard"><i class="feather icon-home"></i></a></li>
               <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
               <li class="breadcrumb-item"><a href="/admin/schools">schools</a></li>
               <li class="breadcrumb-item">Edit School</a></li>
            </ol>
         </div>
         <div class="card mb-2">
            <div class="card-header bg-info">
               <a class="d-flex justify-content-between text-white text-large text-uppercase" data-toggle="collapse"
                  aria-expanded="true" href="#accordion2-2">
                  Teacher Details
                  <div class="collapse-icon"></div>
               </a>
            </div>
            <div id="accordion2-2" class="collapse show" data-parent="#accordion2">
               <div class="card-body">
                  <form action="/admin/school_update/<%= school._id %>" method="post" enctype="multipart/form-data">
                     <div class="form-row teacher-form">
                        <div class="form-group col-md-3">
                           <label class="form-label">First Name</label>
                           <input type="text" name="firstname" value="<%= school.firstname %>"
                              class="form-control px-2" placeholder="Enter name">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Last Name</label>
                           <input type="text" name="lastname" value="<%= school.lastname %>" class="form-control px-2"
                              placeholder="Enter name">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Phone Number</label>
                           <input type="number" name="contact" value="<%= school.contact %>" class="form-control px-2"
                              placeholder="Enter number">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Email Address</label>
                           <input type="email" name="email" value=" <%= school.email %>" class="form-control px-2"
                              placeholder="Enter email dsbale" readonly>
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">School Name </label>
                           <input type="text" name="schoolName" value="<%= school.schoolName %>"
                              class="form-control px-2" placeholder="Enter amount">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">school Type</label>
                           <select class="custom-select" name="schoolType">
                              <option value="">-- Select school Type--</option>
                              <option value="CBSE Board School" <% if (school.schoolType==='CBSE Board School' ) { %>
                                 selected <% } %>>CBSE Board School</option>
                              <option value="State Board School" <% if (school.schoolType==='State Board School' ) { %>
                                 selected <% } %>>State Board School</option>
                              <option value="Play School" <% if (school.schoolType==='PlaySchool' ) { %> selected <% }
                                    %>>Play School</option>
                              <option value="Primary School" <% if (school.schoolType==='Primary School' ) { %>
                                 selected
                                 <% } %>>Primary School
                              </option>
                              <option value="Other" <% if (school.schoolType==='Other' ) { %> selected <% } %>>Other
                              </option>
                           </select>
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">School Email Id </label>
                           <input type="email" name="schoolemail" value="<%= school.schoolemail %>"
                              class="form-control px-2" placeholder="Enter amount">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">School Contact No</label>
                           <input type="number" name="schoolcontact" value="<%= school.schoolcontact %>"
                              class="form-control px-2" placeholder="Enter amount">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Designation</label>
                           <input type="text" name="designation" value="<%= school.designation %>"
                              class="form-control px-2" placeholder="Enter amount">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">School Website</label>
                           <input type="url" name="schoolWebsite" value="<%= school.schoolWebsite %>"
                              class="form-control px-2" placeholder="Enter amount">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Address</label>
                           <input type="text" name="address" value="<%= school.address %>" class="form-control px-2"
                              placeholder="Enter address">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">City</label>
                           <input type="text" name="city" value="<%= school.city %>" class="form-control px-2"
                              placeholder="Enter city">
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">State</label>
                           <select class="custom-select" name="state">
                              <option>--Select--</option>
                              <option value="Andaman and Nicobar Islands" <% if
                                 (school.state==='Andaman and Nicobar Islands' ) { %> selected <% } %> value=""<%
                                       if(school.state==='' ) { %> selected <% } %>> Andaman and Nicobar Islands
                              </option>
                              <option value="Andhra Pradesh" <% if (school.state==='Andhra Pradesh' ) { %> selected <%
                                    } %>> Andhra Pradesh </option>
                              <option value="Arunachal Pradesh" <% if (school.state==='Arunachal Pradesh' ) { %>
                                 selected <% } %>> Arunachal Pradesh </option>
                              <option value="Assam" <% if (school.state==='Assam' ) { %> selected <% } %>> Assam
                              </option>
                              <option value="Bihar" <% if (school.state==='Bihar' ) { %> selected <% } %>> Bihar
                              </option>
                              <option value="Chandigarh" <% if (school.state==='Chandigarh' ) { %> selected <% } %>>
                                    Chandigarh </option>
                              <option value="Chhattisgarh" <% if (school.state==='Chhattisgarh' ) { %> selected <% } %>
                                    > Chhattisgarh </option>
                              <option value="Dadra and Nagar Haveli" <% if (school.state==='Dadra and Nagar Haveli' ) {
                                 %> selected <% } %>> Dadra and Nagar Haveli </option>
                              <option value="Daman Diu" <% if (school.state==='Daman Diu' ) { %> selected <% } %>>
                                    Daman &amp; Diu </option>
                              <option value="Delhi" <% if (school.state==='Delhi' ) { %> selected <% } %>> Delhi
                              </option>
                              <option value="Goa" <% if (school.state==='Goa' ) { %> selected <% } %>> Goa </option>
                              <option value="Gujrat" <% if (school.state==='Gujrat' ) { %> selected <% } %>> Gujrat
                              </option>
                              <option value="Haryana" <% if (school.state==='Haryana' ) { %> selected <% } %>> Haryana
                              </option>
                              <option value="Himachal Pradesh" <% if (school.state==='Himachal Pradesh' ) { %> selected
                                 <% } %>> Himachal Pradesh
                              </option>
                              <option value="Jammu &amp; Kashmir" <% if (school.state==='Jammu Kashmir' ) { %> selected
                                 <% } %>> Jammu &amp; Kashmir
                              </option>
                              <option value="Jharkhand" <% if (school.state==='Jharkhand' ) { %> selected <% } %>>
                                    Jharkhand </option>
                              <option value="Karnataka" <% if (school.state==='Karnataka' ) { %> selected <% } %>>
                                    Karnataka </option>
                              <option value="Kerala" <% if (school.state==='Kerala' ) { %> selected <% } %>> Kerala
                              </option>
                              <option value="Ladakh" <% if (school.state==='Ladakh' ) { %> selected <% } %>> Ladakh
                              </option>
                              <option value="Lakshadweep" <% if (school.state==='Lakshadweep' ) { %> selected <% } %>>
                                    Lakshadweep </option>
                              <option value="Madhya Pradesh" <% if (school.state==='Madhya Pradesh' ) { %> selected <%
                                    } %>> Madhya Pradesh </option>
                              <option value="Maharashtra" <% if (school.state==='Maharashtra' ) { %> selected <% } %>>
                                    Maharashtra </option>
                              <option value="Manipur" <% if (school.state==='Manipur' ) { %> selected <% } %>> Manipur
                              </option>
                              <option value="Meghalaya" <% if (school.state==='Meghalaya' ) { %> selected <% } %>>
                                    Meghalaya </option>
                              <option value="Mizoram" <% if (school.state==='Mizoram' ) { %> selected <% } %>> Mizoram
                              </option>
                              <option value="Nagaland" <% if (school.state==='Nagaland' ) { %> selected <% } %>>
                                    Nagaland </option>
                              <option value="Odisha" <% if (school.state==='Odisha' ) { %> selected <% } %>> Odisha
                              </option>
                              <option value="Puducherry" <% if (school.state==='Puducherry' ) { %> selected <% } %>>
                                    Puducherry </option>
                              <option value="Punjab" <% if (school.state==='Punjab' ) { %> selected <% } %>> Punjab
                              </option>
                              <option value="Rajasthan" <% if (school.state==='Rajasthan' ) { %> selected <% } %>>
                                    Rajasthan </option>
                              <option value="Sikkim" <% if (school.state==='Sikkim' ) { %> selected <% } %>> Sikkim
                              </option>
                              <option value="Tamil Nadu" <% if (school.state==='Tamil Nadu' ) { %> selected <% } %>>
                                    Tamil Nadu </option>
                              <option value="Telangana" <% if (school.state==='Telangana' ) { %> selected <% } %>>
                                    Telangana </option>
                              <option value="Tripura" <% if (school.state==='Tripura' ) { %> selected <% } %>> Tripura
                              </option>
                              <option value="Uttarakhand" <% if (school.state==='Uttarakhand' ) { %> selected <% } %>>
                                    Uttarakhand </option>
                              <option value="Utttar Pradesh" <% if (school.state==='Utttar Pradesh' ) { %> selected <%
                                    } %>> Utttar Pradesh </option>
                              <option value="West Bengal" <% if (school.state==='West Bengal' ) { %> selected <% } %>>
                                    West Bengal </option>
                              <option value="Non Indian" <% if (school.state==='Non Indian' ) { %> selected <% } %>>Non
                                    Indian</option>
                           </select>
                           <div class="clearfix"></div>
                        </div>
                        <div class="form-group col-md-3">
                           <label class="form-label">Pincode</label>
                           <input type="text" name="pincode" value="<%= school.pincode %>" class="form-control px-2"
                              placeholder="Enter pincode">
                           <div class="clearfix"></div>
                        </div>
                       
                        <div class="form-group col-md-12">
                           <label class="form-label">Remark</label>
                           <textarea name="remark" class="form-control px-3" id="" cols="30"
                              rows="10"><%= school.remark %></textarea>
                        </div>
                     </div>
                     <button class="btn btn-primary" name="submit">Update</button>
                  </form>
               </div>
            </div>
         </div>
         <%- include('partials/footer.ejs') %>