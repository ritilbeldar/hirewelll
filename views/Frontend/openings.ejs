<%- include('partials/nav.ejs') %>
<!-- Page Content Start -->
<div class="page-content user-dash-board">
   <!-- Banner  -->
   <div class="dz-bnr-inr dz-bnr-inr-sm text-center overlay-primary-dark"
      style="background-image: url(/Frontend/assets/frontend/images/banner/bnr1.jpg);">
      <div class="container">
         <div class="dz-bnr-inr-entry">
            <h1>Current Openings</h1>
            <!-- Breadcrumb Row -->
            <nav aria-label="breadcrumb" class="breadcrumb-row m-t15">
               <ul class="breadcrumb">
                  <li class="breadcrumb-item"><a href="admin/index">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Current Openings</li>
               </ul>
            </nav>
            <!-- Breadcrumb Row End -->
         </div>
      </div>
   </div>
   <!-- Banner End -->
   <!-- Blog Grid Starts -->
   <section class="content-inner position-relative">
      <div class="container">
         <div class="row">
            <% const hasActiveOpenings=openings.some(opening=> opening.status === 'Active'); %>
            <% if (openings.length===0 || !hasActiveOpenings) { %>
            <div class="col-12 d-flex justify-content-center">
               <img src="/nottt.jpeg" alt="">
            </div>
            <% } else { %>
            <% openings.reverse().forEach((opening, index)=> { %>
            <% if (opening.status==='Active' ) { %>
            <div class="col-xl-4 col-md-6  m-b30">
               <div class="career-open-card wow fadeInUp" data-wow-delay="1.0s">
                  <span id="career-img">
                     <img src="<%= opening.opnlogo.url %>" alt="">
                     <div class="important">
                        <% if (opening.opnPreference==='on' ) { %>
                        <img src="/Frontend/newimg/important.png" alt="">
                        <h5>urgent</h5>
                        <% } else { %>
                        <% } %>
                     </div>
                  </span>
                  <div class="bottom-career-center">
                     <h4>
                        <%= opening.opnTitle %>
                     </h4>
                     <h5>
                        <%= opening.opnCompney %>
                     </h5>
                     <h6><i class="ri-map-pin-fill"></i>
                        <%= opening.opnLnocation %>
                     </h6>
                  </div>
                  <span id="post-date">
                     <p>Posted day: <span>
                        <%= opening.createdAt.toLocaleDateString() %>
                        </span>
                     </p>
                     <p>Last day: <span>
                        <%= opening.opnLastDate.toLocaleDateString() %>
                        </span>
                     </p>
                  </span>
                  <div class="bottom-career-card">
                     <p><i class="ri-bar-chart-line"></i>
                        <%= opening.opnExp %>
                     </p>
                     <p><i class="ri-time-line"></i>
                        <%= opening.opnType %>
                     </p>
                     <p><i class="ri-wallet-3-line"></i></i>â‚¹<%= opening.opnMaxPrice %> / <%=
                        opening.opnPriceType %>
                     </p>
                     <p><i class="ri-door-open-fill"></i>Total Openings (<%= opening.opnTotalOpenings
                        %>)</p>
                  </div>
                  <span id="career-img">
                     <img class="invisible" src="/Frontend/newimg/React.webp" alt="">
                     <% if (isAuthenticated) { %>
                     <a class="btn <%= appliedOpeningsIds.includes(opening._id.toString()) ? 'btn-primary disabled' : 'btn-success' %>"
                        href="<%= '/teacher/jobDescription/' + opening._id %>">
                     <%= appliedOpeningsIds.includes(opening._id.toString()) ? 'Applied'
                        : 'Apply Now' %>
                     </a>
                     <% } else { %>
                     <a class="btn btn-success" href="<%= '/jobDescription/' + opening._id %>">
                     Apply Now
                     </a>
                     <% } %>
                  </span>
               </div>
            </div>
            <% } %>
            <% }); %>
            <% } %>
         </div>
         <% if (openings.length> 9) { %>
         <div class="row">
            <div class="col-xl-12 col-lg-12 m-b30 m-t30 m-lg-t10">
               <nav aria-label="Blog Pagination">
                  <ul class="pagination style-1 text-center wow fadeInUp" data-wow-delay="0.8s">
                     <li class="page-item"><a class="page-link prev" href="javascript:void(0);"><i
                        class="fas fa-chevron-left"></i></a></li>
                     <li class="page-item"><a class="page-link active" href="javascript:void(0);">1</a></li>
                     <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
                     <li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
                     <li class="page-item"><a class="page-link next" href="javascript:void(0);"><i
                        class="fas fa-chevron-right"></i></a></li>
                  </ul>
               </nav>
            </div>
         </div>
         <% } %>
      </div>
   </section>
   <!-- blog grid code starts from here -->
   <!--footer-action -->
   <%- include('partials/letsGet.ejs') %>
   <!-- footer-action -->
</div>
<!-- Page Content End -->
<%- include('partials/footer.ejs') %>